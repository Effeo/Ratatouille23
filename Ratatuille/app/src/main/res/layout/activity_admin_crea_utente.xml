<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AdminCreaUtenteActivity">

    <View
        android:id="@+id/vector_1"
        android:layout_width="1335dp"
        android:layout_height="800dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sfondo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
        android:id="@+id/frame_1"
        android:layout_width="804dp"
        android:layout_height="700dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:clipToOutline="true"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vector_1"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vector_1">

        <LinearLayout
            android:layout_width="800dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginEnd="0dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_logout"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/__icon__logout_" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_aggiungi_piatto"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/adding_1" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_modifica_menu"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/__icon__menu_book_" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_messaggi"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/__icon__email_message_inbox_" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_statistiche"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/monitoring_fill0_wght400_grad0_opsz48_1" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="1dp">

                <ImageButton
                    android:id="@+id/admin_add_utente"
                    android:layout_width="134dp"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/black"
                    android:src="@drawable/vector" />


            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/crea_utente"
            android:layout_width="match_parent"
            android:layout_height="95sp"
            android:gravity="center"
            android:text="@string/crea_utente"
            android:textColor="@color/black"
            android:textSize="64sp" />

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="227dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bordo_nero"
            android:hint="Username"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="227dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/bordo_nero"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <Spinner
            android:id="@+id/spinner_admin_scelta_ruolo"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_marginStart="227dp"
            android:layout_marginTop="320dp" />

        <Button
            android:id="@+id/btn_crea_utente"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="227dp"
            android:layout_marginTop="420dp"
            android:backgroundTint="@color/black"
            android:clipToOutline="true"
            android:text="@string/crea_utente"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_cambia_password"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="227dp"
            android:layout_marginTop="520dp"
            android:backgroundTint="@color/black"
            android:clipToOutline="true"
            android:text="@string/cambia_password_utente"
            android:textSize="25dp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>